{
	"name": "sports.live",
	"version": "1.0.0",
	"description": "A mobile-first spoiler-free NBA web app",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write \"**/*.{js,ts,svelte,json,css,scss,md}\"",
		"format:check": "prettier --check \"**/*.{js,ts,svelte,json,css,scss,md}\"",
		"prepare": "svelte-kit sync && husky"
	},
	"dependencies": {
		"lucide-svelte": "^0.563.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^22.10.5",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.2",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,css,scss,md}": [
			"prettier --write"
		]
	}
}
